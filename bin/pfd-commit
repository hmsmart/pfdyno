#!/usr/bin/env python3
# cmd (table, ip, hw)
import sys
import syslog
import mmap

table = sys.argv[1]
ip = sys.argv[2]
hw = sys.argv[3]

#load table
with open(f"/home/_pfdyno/anchors/{table}_leased.txt", "r+") as leases:
    inLeaseTable = False
    for lease_line in leases:
        if ip in lease_line:
                inLeaseTable = True
                break
    if not inLeaseTable:
        syslog.syslog(f"Must append ${ip}")
        leases.write(f"{ip}\n")
    else:
        syslog.syslog(f"{ip} present")
        