#!/usr/bin/env python3
# cmd (table, ip, hw)
import sys 
import syslog
import mmap

table = sys.argv[1]
ip = sys.argv[2]
hw = sys.argv[3]

#load table
with open(f"/home/_pfdyno/anchors/{table}_leased", "rw+b") as leased:
    lmap = mmap.mmap(leased.fileno(),0)
    isPresent = lmap.find(ip)
    if isPresent == -1:
        syslog.syslog(f"{ip} not in table")
    else:
        syslog.syslog(f"{ip} not present")
    lmap.close()